  "version": "0.2.0",
  "configurations": [
    {
      "command": "yarn dev:static",
      "name": "debug with chrome",
      "request": "launch",
      "type": "node-terminal",
      "serverReadyAction": {
        "pattern": "Loopback: http://localhost:([0-9]+)/",
        "uriFormat": "http://127.0.0.1:%s",
        "action": "debugWithChrome"
      },
      "env": {
        "NO_OPEN": "1"
      }
    },
